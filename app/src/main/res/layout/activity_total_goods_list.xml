<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/actionBarMyShelf"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/indigo_600" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/abarTitle"
            android:layout_toRightOf="@+id/backButton"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="48dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="@string/goods" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:src="@drawable/ic_arrow_back_white_36dp"
            android:background="@drawable/transparent_nobord_button" />

        <ImageButton
            android:id="@+id/revAuthorAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:src="@drawable/ic_exit_to_app_white_48dp"
            android:visibility="invisible" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="fill_parent">











    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:fastScrollEnabled="false"
            android:scrollIndicators="none"
            android:scrollbars="none">
        </ListView>

        <ProgressBar
            android:id="@+id/loadBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sideIndex"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:background="@color/button_material_light"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

    </LinearLayout>

</LinearLayout>
</LinearLayout>