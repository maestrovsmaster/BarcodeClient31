<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:paddingLeft="15dp" >

    <Button
        android:id="@+id/plusCntBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/crimea_button"
        android:padding="2dp"
        android:text="+"
        android:textColor="@color/dark_gray" />

    <Button
        android:id="@+id/cntBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/plusCntBt"
        android:background="@drawable/crimea_nobord_button"
        android:padding="2dp"
        android:text="0"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/minusCntBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cntBt"
        android:background="@drawable/crimea_nobord_button"
        android:padding="2dp"
        android:text="-"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/goodNameTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minusCntBt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/minusCntBt"
        android:background="@drawable/crimea_nobord_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="TextView"
        android:textColor="@color/dark_gray" />

</RelativeLayout>
