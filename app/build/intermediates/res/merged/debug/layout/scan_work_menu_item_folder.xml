<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/catalog_of_goods"
        android:id="@+id/folder"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_folder_open_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_of_goods"
        android:id="@+id/list"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_list_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/keyboard_settings"
        android:id="@+id/key"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_keyboard_hide_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/import_from_excel"
        android:id="@+id/import_excel"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_import_xls"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export_file"
        android:id="@+id/export"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_export_xls"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_inventory"
        android:id="@+id/delete"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_delete_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_inventory"
        android:id="@+id/settings"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_settings_applications_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_this_app"
        android:id="@+id/review"
        android:background="@drawable/indigo_blue_button"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawableLeft="@drawable/ic_rate_review_white_36dp"
        android:drawablePadding="6dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical|left" />

</LinearLayout>