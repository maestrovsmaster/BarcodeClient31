<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:paddingLeft="15dp"
    android:background="#aecbd9">

    <TextView
        android:id="@+id/goodNameTW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/indigo_900"
        android:background="@drawable/white_button"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:layout_toLeftOf="@+id/priceTW" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/goodInfoTW"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/white_button"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/priceTW"
        android:layout_below="@+id/goodNameTW"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/priceTW"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cntTW"
        android:background="@drawable/white_button"
        android:layout_marginLeft="1px"
        android:textSize="16sp"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/cntTW"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/goodInfoTW"
        android:background="@drawable/white_button"
        android:layout_marginLeft="1px"
        android:textSize="16sp"
        android:textColor="@color/indigo_900"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:gravity="center_horizontal" />


</RelativeLayout>
